{
  "compilerOptions": {
    "target": "ESNext",
    "module": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@pomo-ui/*": ["pomo-ui/src/app/*"]
    }
  }
}
