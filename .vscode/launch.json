{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Electron + Angular",
      "configurations": ["Electron: Main", "Angular: Renderer"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge",
      "runtimeArgs": ["start"],
      "preLaunchTask": "ui",
      "postDebugTask": "stop-ui"
    },

    {
      "name": "Angular: Renderer",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/pomo-ui",
      "sourceMaps": true
    }
  ]
}
