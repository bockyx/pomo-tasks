{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui",
      "type": "shell",
      "command": "pnpm dev:ui",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "stop-ui",
      "type": "shell",
      "command": "echo ${input:terminate}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "ui"
    }
  ]
}
